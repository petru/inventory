<%= form_with model: @book, local: true do |form| %>
  <%if @book.errors.any? %>
    <div id="error_explanation">
      <h2>
      <%= pluralize(@book.errors.count, "error") %> occured:
      </h2>
      <ul>
        <% @book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <%= form.label :title %>
    <%= form.text_field :title %>
    <%= form.label :author %>
    <%= form.text_field :author %>
    <%= form.label :year, 'Year Published' %>
    <%= form.text_field :year %>
    <%= form.label :genre %><br>
    <%= form.radio_button :genre, "fiction", checked: true %>
    <%= form.label :genre_fiction, "fiction" %>
    <%= form.radio_button :genre, "nonfiction" %>
    <%= form.label :genre_nonfiction, "non-fiction" %><br>
    <%= form.label :owned_since %>
    <%= form.date_select :owned_since, start_year: 1990, end_year: Date.today.year, order: [:month, :day, :year] %><br>
    <%= form.label :format %><br>
    <%= form.radio_button :format, "paperback", checked: true%>
    <%= form.label :format_paperback, "paperback" %>
    <%= form.radio_button :format, "hardcover" %>
    <%= form.label :format_hardcover, "hardcover" %>
    <%= form.radio_button :format, "pdf" %>
    <%= form.label :format_pdf, "PDF" %>
    <%= form.radio_button :format, "epubmobi" %>
    <%= form.label :format_epubmobi, "EPUB/MOBI" %><br>
    <%= form.check_box :read %>
    <%= form.label :read %><br>
    <%= form.label :notes %>
    <%= form.text_area :notes, size: "60x12" %>
    <%= form.submit %>

<% end %>