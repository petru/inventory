<h1>Books</h1>
<%= link_to "Add new", new_book_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Year published</th>
    <th>Type</th>
    <th>Format</th>
    <th>Read?</th>
    <th>Notes</th>
    <th>Edit</th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.author %></td>
      <td><%= book.year %></td>
      <td><%= book.genre == "fiction" ? "fiction" : "non-fiction" %>
      <td><%= book.format %></td>
      <td><%= book.read ? "yes" : "no" %></td>
      <td><%= book.notes %></td>
      <td><%= link_to 'edit', edit_book_path(book) %></td>
    </tr>
  <% end %>
</table>